<div class="ui form">
  {{#if user.isValid}}
    <h4 class="ui dividing header">{{t 'visualize.demographic-form.logged-in'}}</h4>
  {{else}}
    <h4 class="ui dividing header">{{t 'visualize.demographic-form.logged-out'}}</h4>
  {{/if}}
</div>
{{#ui-dropdown  id="gender-dropdown" class="selection" selected=user.gender onChange=(action 'update' 'gender' gender) as |execute mapper|}}
  <div class="default text">{{t 'visualize.demographic-form.gender'}}</div>
  <i class="dropdown icon"></i>
  <div class="menu">
    {{#each genders as |gender|}}
      <div data-value="{{map-value mapper gender}}" class="item">
        {{gender}}
      </div>
    {{/each}}
  </div>
{{/ui-dropdown}}

{{#ui-dropdown id="ageGroup-dropdown" class="selection" selected=user.ageGroup onChange=(action 'update' 'ageGroup' ageGroup) as |execute mapper|}}
  <div class="default text">{{t 'visualize.demographic-form.age-group'}}</div>
  <i class="dropdown icon"></i>
  <div class="menu">
    {{#each ageGroups as |ageGroup|}}
      <div data-value="{{map-value mapper ageGroup}}" class="item">
        {{ageGroup}}
      </div>
    {{/each}}
  </div>

</div>

{{yield}}
